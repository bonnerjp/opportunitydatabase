<% if object.errors.any? %>
<div id="error_explanation">
    <div class="alert alert-error">
        Sorry - we've got <%= pluralize(object.errors.count, "problem") %>.
        <ul>
            <% object.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>